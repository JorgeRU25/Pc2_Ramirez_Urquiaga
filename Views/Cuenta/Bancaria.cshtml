@model PracticaCalificada2.Models.CuentaBancaria
@{
    ViewBag.Title = "Crear Cuenta Bancaria";
}

<div class="container mt-5">
    <h2 class="text-center">Crear Cuenta Bancaria</h2>
    <div class="card mt-4" style="border: 2px solid black; max-width: 300px; margin: auto;">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group text-center">
                    <label asp-for="NombreTitular" class="control-label small"></label>
                    <input asp-for="NombreTitular" class="form-control form-control-sm"
                        style="width: 100%; display: inline-block;" />
                    <span asp-validation-for="NombreTitular" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-3">
                    <label asp-for="TipoCuenta" class="control-label small"></label>
                    <select asp-for="TipoCuenta" class="form-control form-control-sm"
                        style="width: 100%; display: inline-block;">
                        <option value="">Seleccione un tipo de cuenta</option>
                        <option value="Ahorros">Ahorros</option>
                        <option value="Corriente">Corriente</option>
                        <option value="Trabajadores">Trabajadores</option>
                        <option value="Plazo Fijo">Plazo Fijo</option>
                    </select>
                    <span asp-validation-for="TipoCuenta" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-3">
                    <label asp-for="SaldoInicial" class="control-label small"></label>
                    <input asp-for="SaldoInicial" class="form-control form-control-sm"
                        style="width: 100%; display: inline-block;" />
                    <span asp-validation-for="SaldoInicial" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-3">
                    <label asp-for="Email" class="control-label small"></label>
                    <input asp-for="Email" class="form-control form-control-sm"
                        style="width: 100%; display: inline-block;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-sm">Crear Cuenta</button>
                </div>
            </form>
        </div>
    </div>
</div>